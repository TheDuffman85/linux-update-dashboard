{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./server/*"],
      "@client/*": ["./client/*"]
    },
    "types": ["bun"]
  },
  "include": ["server/**/*.ts", "client/**/*.ts", "client/**/*.tsx", "vite.config.ts", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
