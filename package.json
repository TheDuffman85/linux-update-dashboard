{
  "name": "linux-update-dashboard",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "bun run dev:server & bun run dev:client",
    "dev:server": "bun run --watch server/index.ts",
    "dev:client": "bunx --bun vite",
    "build": "vite build && bun build server/index.ts --outdir dist/server --target bun",
    "start": "bun run dist/server/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "bun test",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@simplewebauthn/server": "^11.0.0",
    "croner": "^10.0.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "jose": "^6.0.0",
    "nodemailer": "^8.0.1",
    "openid-client": "^6.3.0",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@tanstack/react-query": "^5.65.0",
    "@types/bun": "^1.2.0",
    "@types/nodemailer": "^7.0.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ssh2": "^1.15.0",
    "@vitejs/plugin-react": "^4.3.0",
    "drizzle-kit": "^0.31.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.13.1",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.7.0",
    "vite": "^6.1.0"
  }
}
