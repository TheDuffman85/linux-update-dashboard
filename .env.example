# Required: Encryption key for securing SSH credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
LUDASH_ENCRYPTION_KEY=

# Optional: Database file path (default: ./data/dashboard.db)
LUDASH_DB_PATH=./data/dashboard.db

# Optional: Log level (default: info)
LUDASH_LOG_LEVEL=info

# Optional: Server port (default: 3001)
LUDASH_PORT=3001

# Optional: Session signing secret (auto-generated if not set)
LUDASH_SECRET_KEY=

# Optional: Base URL for OIDC redirect URIs
LUDASH_BASE_URL=http://localhost:3001
